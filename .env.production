BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_KEY=SET_STRONG_ENCRYPTION_KEY_IN_PRODUCTION
DATABASE_BACKUP_SCHEDULE=0 2 * * *
OFFSITE_BACKUP_ENABLED=true

# Monitoring & Alerts
MONITORING_ENABLED=true
ALERT_EMAIL=admin@luvlang.org
SLACK_WEBHOOK_URL=SET_SLACK_WEBHOOK_FOR_ALERTS
SENTRY_DSN=SET_SENTRY_DSN_FOR_ERROR_TRACKING

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=900
BURST_LIMIT=10

# CORS Configuration
ALLOWED_ORIGINS=https://luvlang.org,https://auth.luvlang.org

# SSL/TLS Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
ENABLE_SSL_REDIRECT=true

# Logging Configuration
LOG_LEVEL=warn
ENABLE_ACCESS_LOGS=true
LOG_RETENTION_DAYS=30

# Performance Configuration
ENABLE_COMPRESSION=true
CACHE_MAX_AGE=3600
CDN_URL=SET_YOUR_CDN_URL